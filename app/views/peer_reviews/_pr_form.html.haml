.container.sub-form
  .col-md-8.col-md-offset-2
    .row
      .panel.panel-default
        .panel-heading
          %h3
            Submission Form
          .row
            = form_for @peer_review, url: {action: "create"} do |prform|
              .container
                .reg-header
                  %h4
                    Assign the Peer Review
                  %span.input-group
                    %h5
                      assign your pr to
                      = prform.select(:user_id, options_for_select(@user_options))
                  %span.input-group
                    = prform.hidden_field :submitter_id
                  %span.input-group
                    %h5
                      number of locations
                      = prform.number_field :loc_count
                  %span.input-group
                    %h5
                      external link
                      = prform.text_field :external_link
                  %span
                    = prform.submit 'Submit'