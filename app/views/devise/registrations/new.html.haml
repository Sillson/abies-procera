.container
  .row
    .col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3
      = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'reg-page'}) do |f|
        .reg-header
          %h2 Sign Up
        .input-group
          %span.input-group-addon
          = f.text_field :name, autofocus: true, placeholder: 'Name', class: 'form-control'  
        .input-group
          %span.input-group-addon
          = f.email_field :email, autofocus: true, placeholder: 'Email', class: 'form-control'        
        .input-group
          %span.input-group-addon
          = f.label :password
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} characters minimum)
          %br/
          = f.password_field :password, placeholder: 'Password', autocomplete: "off", class: 'form-control'
        .input-group
          %span.input-group-addon
          = f.label :password_confirmation
          %br/
          = f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm Password', class: 'form-control'  
        .row
          .col-md-6
            %label.checkbox
              %input{type: "checkbox"}/
              
              Montucky?
          .col-md-6
            = f.submit 'Sign Up', class: 'pull-right'
        %hr/

 
= render "devise/shared/links"